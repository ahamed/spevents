<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="basic">
        <field name="id" type="hidden" />
        <field name="title" type="text" class="inputbox" size="40" required="true" description="JFIELD_TITLE_DESC" lable="JGLOBAL_TITLE" />
        <field name="alias" type="text" id="alias" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />
        <field name="categories"
               type="sql"
               label="COM_SPEVENTS_CATEGORY_LABEL"
               description="COM_SPEVENTS_CATEGORY_DESC"
               query="SELECT id, title from #__spevents_categories where enabled = 1"
               key_field="id"
               value_field="title"
               multiple="multiple" required="true" />
        <field name="location"
               label="COM_SPEVENTS_LOCATION_LABEL"
               description="COM_SPEVENTS_LOCATION_DESC"
               type="sql"
               query="SELECT id, venue_name AS venue from #__spevents_locations where enabled = 1"
               key_field="id"
               value_field="venue"
               required="true">
            <option value="">Select a location</option>
            <option value="0">Online</option>
        </field>
        <field name="organizers"
               label="COM_SPEVENTS_ORGANIZERS_LABEL"
               description="COM_SPEVENTS_ORGANIZERS_DESC"
               type="sql"
               query="SELECT id, title from #__spevents_organizers where enabled = 1"
               key_field="id"
               value_field="title"
               required="true"
               multiple="multiple"
        />
        <field name="seats" type="number" label="COM_SPEVENTS_SEATS_LABEL" description="COM_SPEVENTS_SEATS_DESC"  required="true" />
        <field name="tickets" type="sql" query="SELECT id, title FROM #__spevents_tickets AS a WHERE a.enabled = 1" key_field="id" value_field="title" multiple="true"/>
        <field name="banner" type="media" label="COM_SPEVENTS_BANNER_LABEL" description="COM_SPEVENTS_BANNER_DESC"/>
        <field name="url" type="url" label="COM_SPEVENTS_URL_LABEL" description="COM_SPEVENTS_URL_DESC" />
        <field name="description" label="COM_SPEVENTS_DESCRIPTION_LABEL" description="COM_SPEVENTS_DESCRIPTION_DESC" type="editor"/>
    </fieldset>
    <fieldset name="date-time">
        <field name="start_time" type="calendar" showtime="true" timeformat="24" format="%Y-%m-%d %H:%M" required="true" label="COM_SPEVENTS_START_TIME_LABEL" description="COM_SPEVENTS_START_DATE_DESC"/>
        <field name="end_time" type="calendar" showtime="true" timeformat="24" format="%Y-%m-%d %H:%M" label="COM_SPEVENTS_END_TIME_LABEL" description="COM_SPEVENTS_START_DATE_DESC" showon="all_day_event:0" />
        <field name="all_day_event" type="radio" label="COM_SPEVENTS_ALL_DAY_EVENT_LABEL" description="COM_SPEVENTS_ALL_DAY_EVENT_DESC" default="0" class="btn-group">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="timezone" type="timezone" default="Asia/Dhaka" label="COM_SPEVENTS_TIMEZONE_LABEL" description="COM_SPEVENTS_TIMEZONE_DESC" required="true" />


    </fieldset>
    <fieldset name="repeat">
        <fields name="recurring">
            <field name="repeat_amount" type="text" label="COM_SPEVENTS_REPEAT_EVERY_LABEL" description="COM_SPEVENTS_REPEAT_EVERY_DESC" />
            <field name="repeat_type" type="list" label="">
                <option value="day">Day</option>
                <option value="week">Week</option>
                <option value="month">Month</option>
                <option value="year">Year</option>
            </field>
            <field name="end_repeat" type="calendar" format="%Y-%m-%d" label="COM_SPEVENTS_END_REPEAT_LABEL" description="COM_SPEVENTS_END_REPEAT_DESC"/>
            <field name="repeat_on" type="list" multiple="true" label="Repeat on">
                <option value="1">Saturday</option>
                <option value="2">Sunday</option>
                <option value="3">Monday</option>
                <option value="4">Tuesday</option>
                <option value="5">Wednesday</option>
                <option value="6">Thursday</option>
                <option value="7">Friday</option>
            </field>
            <field name="repeat_also" type="cdatepicker" label="COM_SPEVENTS_REPEAT_ALSO_LABEL" description="COM_SPEVENTS_REPEAT_ALSO_DESC" />

            <field name="repeat_not" type="cdatepicker" label="COM_SPEVENTS_REPEAT_NOT_LABEL" description="COM_SPEVENTS_REPEAT_NOT_DESC" />
            
        </fields>
    </fieldset>
    <fieldset name="registration">
        <fields name="registration">
            <field name="reg_start" type="calendar" format="%Y-%m-%d" label="COM_SPEVENTS_REG_START_LABEL" description="COM_SPEVENTS_REG_START_DESC"/>
            <field name="reg_end" type="calendar" format="%Y-%m-%d" label="COM_SPEVENTS_REG_END_LABEL" description="COM_SPEVENTS_REG_END_DESC"/>
            <field name="reg_cancel" type="calendar" format="%Y-%m-%d" label="COM_SPEVENTS_REG_CANCEL_LABEL" description="COM_SPEVENTS_REG_CANCEL_DESC"/>
            <field name="reg_payment" type="list" label="COM_SPEVENTS_PAYMENT_LABEL" description="COM_SPEVENTS_PAYMENT_DESC" multiple="multiple">
                <option value="COD">Cash On Delivery</option>
                <option value="paypal">Paypal</option>
            </field>
            <field name="reg_allow_overflow" type="radio" label="COM_SPEVENTS_ALLOW_OVERFLOW_LABEL" description="COM_SPEVENTS_ALLOW_OVERFLOW_DESC" default="0" class="btn-group">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

        </fields>
    </fieldset>
    <fieldset name="gallery">
        <field name="gallery" type="subform" formsource="/administrator/components/com_spevents/models/fields/gallery.xml" label="Gallery" description="" multiple="true" />
    </fieldset>
    <fieldset name="social">
        <fields name="social_tags">
            <field name="social_facebook" type="url" label="COM_SPEVENTS_SOCIAL_FACEBOOK" description="COM_SPEVENTS_SOCIAL_FACEBOOK_DESC" />
            <field name="social_twitter" type="url" label="COM_SPEVENTS_SOCIAL_TWITTER" description="COM_SPEVENTS_SOCIAL_TWITTER_DESC" />
            <field name="social_linkedin" type="url" label="COM_SPEVENTS_SOCIAL_LINKEDIN" description="COM_SPEVENTS_SOCIAL_LINKEDIN_DESC" />
            <field name="social_google_plus" type="url" label="COM_SPEVENTS_SOCIAL_GOOGLE" description="COM_SPEVENTS_SOCIAL_GOOGLE_DESC" />
            <field name="social_instagram" type="url" label="COM_SPEVENTS_SOCIAL_INSTA" description="COM_SPEVENTS_SOCIAL_INSTA_DESC" />
        </fields>
    </fieldset>
    <fieldset name="options">
        <field name="featured" type="radio" label="COM_SPEVENTS_FEATURED_LABEL" description="COM_SPEVENTS_FEATURED_DESC" default="0" class="btn-group">
        	<option value="1">JYES</option>
        	<option value="0">JNO</option>
        </field>	
        <field name="tags" type="sql" query="SELECT id, title FROM #__spevents_tags where enabled = 1" key_field="id" value_field="title" label="COM_SPEVENTS_TAGS_LABEL" description="COM_SPEVENTS_TAGS_DESC" multiple="multiple" />

        <field name="enabled" type="list" label="JSTATUS" labelclass="hello-label" class="chzn-color-state" filter="intval" size="1" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field name="language" type="language" label="COM_SPEVENTS_FIELD_LANGUAGE">
            <option value="*">COM_SPEVENTS_ALL_LANGUAGES</option>
        </field>
        <field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" />
        <field name="created_on" type="calendar" showtime="false" timeformat="24" format="%Y-%m-%d" label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_DESC"/>
        <field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL"/>
    </fieldset>
