<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="basic">
        <field name="id" type="hidden" />
        <field name="title" type="text" size="50" label="COM_SPEVENTS_TICKET_TITLE_LABEL" description="COM_SPEVENTS_TICKET_TITLE_DESC" required="true"/>
        <field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />
        <field name="image" type="media" label="COM_SPEVENTS_IMAGE_LABEL" description="COM_SPEVENTS_IMAGE_DESC" required="true"/>
        <field name="designation" type="text" label="COM_SPEVENTS_DESIGNATION_LABEL" description="COM_SPEVENTS_DESIGNATION_DESC" required="true" />
        <field name="description" type="editor" label="COM_SPEVENTS_TICKET_DESCRIPTION_LABEL" description="COM_SPEVENTS_TICKET_DESCRIPTION_DESC"/>
    </fieldset>
    <fieldset name="social">
        <field name="social_links" type="subform" formsource="/administrator/components/com_spevents/models/fields/social.xml" label="COM_SPEVENTS_SOCIAL_LILNKS" description="COM_SPEVENTS_SOCIAL_LILNKS_DESC" multiple="true" />
    </fieldset>
    <fieldset name="options">
        <field name="enabled" type="list" label="JSTATUS" labelclass="hello-label" class="chzn-color-state" filter="intval" size="1" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field name="language" type="language" label="COM_SPEVENTS_FIELD_LANGUAGE">
            <option value="*">COM_SPEVENTS_ALL_LANGUAGES</option>
        </field>
        <field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" />
        <field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL"/>
    </fieldset>
</form>
