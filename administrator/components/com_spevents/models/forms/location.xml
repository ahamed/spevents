<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="basic">
        <field name="id" type="hidden" />
        <field name="venue_name" label="COM_SPEVENTS_VENUE_LABEL" type="text" class="inputbox" required="true" />
        <field name="alias" type="text" id="alias" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />
        <field name="address" label="COM_SPEVENTS_ADDRESS_LABEL" description="COM_SPEVENTS_ADDRESS_DESC" type="textarea" required="true" />
        <field name="country" label="COM_SPEVENTS_COUNTRY_LABEL" description="COM_SPEVENTS_COUNTRY_DESC" type="spcountries" required="true" />
        <field name="city" label="COM_SPEVENTS_CITY_LABEL" description="COM_SPEVENTS_CITY_DESC" type="text" required="true" />
        <field name="state" label="COM_SPEVENTS_STATE_LABEL" description="COM_SPEVENTS_STATE_DESC" type="text"/>
        <field name="postal_code" label="COM_SPEVENTS_POSTAL_CODE_LABEL" description="COM_SPEVENTS_POSTAL_CODE_DESC" type="text" />
        <field name="phone" label="COM_SPEVENTS_PHONE_LABEL" description="COM_SPEVENTS_PHONE_DESC" type="text" required="true" />
        <field name="website" label="COM_SPEVENTS_WEBSITE_LABEL" description="COM_SPEVENTS_WEBSITE_DESC" type="url"/>
        <field name="image" type="media" label="COM_SPEVENTS_IMAGE_LABEL" description="COM_SPEVENTS_IMAGE_DESC"/>
        <field name="lat_lng" label="COM_SPEVENTS_MAP_LABEL" description="COM_SPEVENTS_MAP_DESC" type="cmap" required="true"/>
        <field name="description" label="COM_SPEVENTS_DESCRIPTION_LABEL" description="COM_SPEVENTS_DESCRIPTION_DESC" type="editor"/>
    </fieldset>

    <fieldset name="options">
        <field name="enabled" type="list" label="JSTATUS" labelclass="hello-label" class="chzn-color-state" filter="intval" size="1" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field name="language" type="language" label="COM_SPEVENTS_FIELD_LANGUAGE">
            <option value="*">COM_SPEVENTS_ALL_LANGUAGES</option>
        </field>
        <field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" />
        <field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL"/>
    </fieldset>

</form>